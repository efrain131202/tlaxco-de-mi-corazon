---
const pdfUrl = "/MENU DESAYUNOS REDISEÑO.pdf";
---

<section class="section-background">
    <div class="nav-links">
        <a href="https://alqueriacentral.netlify.app/">Inicio</a>
        <a href="/reservas">Reservas</a>
        <a href="/">Restaurante</a>
        <a href="/astracciones">Atracciones</a>
    </div>
    <div class="text-container">
        <h1>Tlaxco de mi Corazón</h1>
    </div>
    <button id="menuButton" class="menu-button">Menú</button>
</section>

<div id="pdfViewer" class="pdf-viewer">
    <button id="closePdfButton" class="close-button">&times;</button>
    <iframe src={pdfUrl} width="100%" height="100%"></iframe>
</div>

<style>
    .section-background {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .section-background::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("/img/imagen1.png");
        background-size: cover;
        background-position: center;
        filter: brightness(70%) sepia(10%) hue-rotate(10deg);
        z-index: 0;
    }

    .text-container {
        position: relative;
        z-index: 1;
        text-align: center;
        color: white;
    }

    .text-container h1 {
        margin: 0;
        font-size: clamp(25px, 6vw, 45px);
        font-family: "Big Shoulders Text", cursive;
    }

    .menu-button {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        padding: 10px 20px;
        border: 2px solid white;
        background-color: transparent;
        color: white;
        font-size: 20px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-family: "Big Shoulders Text", cursive;
        z-index: 1;
    }

    .menu-button:hover {
        background-color: rgba(255, 255, 255, 0.2);
    }

    .nav-links {
        position: absolute;
        top: 20px;
        width: 100%;
        text-align: center;
        z-index: 1;
    }

    .nav-links a {
        color: white;
        font-family: "Big Shoulders Text", cursive;
        font-size: 20px;
        text-decoration: none;
        margin: 0 15px;
        position: relative;
    }

    .nav-links a:hover::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 2px;
        background: white;
    }

    .pdf-viewer {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8);
        z-index: 1000;
    }

    .pdf-viewer iframe {
        border: none;
    }

    .close-button {
        position: absolute;
        top: 10px;
        right: 20px;
        font-size: 30px;
        color: white;
        background: none;
        border: none;
        cursor: pointer;
    }

    @media (max-width: 768px) {
        .text-container h1 {
            font-size: 40px;
        }

        .menu-button {
            font-size: 16px;
            padding: 8px 16px;
        }

        .nav-links a {
            font-size: 14px;
        }
    }

    @media (max-width: 480px) {
        .text-container h1 {
            font-size: 32px;
        }

        .menu-button {
            font-size: 14px;
            padding: 6px 12px;
        }

        .nav-links a {
            font-size: 12px;
        }
    }
</style>

<script>
    import "/src/scripts/menu.js"
</script>